@using TemplateGenerator.Models.Th18
@{
    ViewData["Title"] = $"{Definitions.Title} スコアデータ";
}
@section Styles {
<style>
/* <![CDATA[ */
    td.name { min-width: 70px; }
    td.score { min-width: 70px; }
    td.stage { min-width: 70px; }
    td.date { min-width: 120px; }
    td.slow { min-width: 50px; }
    table.score_per_level { float: left; }
    table.score_per_level td.number { min-width: 20px; }
/* ]]> */
</style>
}
@section Navigation {
    <ul>
     <li><a href="th18score1.html">スコアデータ全般</a></li>
     <li>個別ランキング</li>
     <li><a href="th18score3.html">プラクティス</a></li>
     <li><a href="th18card1.html">御札戦歴（@Html.Raw(Definitions.CareerKinds["S"])）</a></li>
     <li><a href="th18card2.html">御札戦歴（@Html.Raw(Definitions.CareerKinds["P"])）</a></li>
    </ul>
    <ul>
    @foreach (var level in Definitions.LevelNames)
    {
     <li><a href="#@(level.Value)">@Html.Raw(level.Value)</a></li>
    }
    </ul>
}

    @foreach (var level in Definitions.LevelNames)
    {
   <section>
    <h2 id="@(level.Value)">@Html.Raw(level.Value)</h2>

        @foreach (var chara in Definitions.CharacterNames)
        {
    <table class="score_per_level">
     <caption>@Html.Raw(chara.Value)</caption>
     <thead>
      <tr>
       <th class="number">No.</th>
       <th class="name">Name</th>
       <th class="score">Score</th>
       <th class="date">Date</th>
       <th class="stage">Stage</th>
       <th class="slow">Slow</th>
      </tr>
     </thead>
     <tbody>
            @foreach (var rank in Enumerable.Range(1, 10))
            {
                var rankKey = rank % 10;
      <tr>
       <td class="number">@(rank)</td>
       <td class="name">%T18SCR@(level.Key)@(chara.Key)@(rankKey)1</td>
       <td class="score">%T18SCR@(level.Key)@(chara.Key)@(rankKey)2</td>
       <td class="date">%T18SCR@(level.Key)@(chara.Key)@(rankKey)4</td>
       <td class="stage">%T18SCR@(level.Key)@(chara.Key)@(rankKey)3</td>
       <td class="slow">%T18SCR@(level.Key)@(chara.Key)@(rankKey)5</td>
      </tr>
            }
     </tbody>
    </table>
@:
        }
   </section>
        @if (level.Key != Definitions.LevelNames.Last().Key)
        {
@:
   <hr />
@:
        }
    }
