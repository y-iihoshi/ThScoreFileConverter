@using TemplateGenerator.Models.Th075
@{
    ViewData["Title"] = $"{Definitions.Title} スコアデータ";
}
@section Styles {
<style>
/* <![CDATA[ */
    td.name { min-width: 70px; }
    td.score { min-width: 70px; }
    td.date { min-width: 40px; }
    table.score_per_level { float: left; }
    table.score_per_level td.number { min-width: 40px; }
/* ]]> */
</style>
}
@section Navigation {
    <ul>
     <li><a href="th075score1.html">スコアデータ全般</a></li>
     <li>個別ランキング</li>
     <li><a href="th075card.html">御札戦歴</a></li>
    </ul>
    <ul>
    @foreach (var level in Definitions.LevelNames)
    {
     <li><a href="#@(level.Value)">@Html.Raw(level.Value)</a></li>
    }
    </ul>
}

    @foreach (var level in Definitions.LevelNames)
    {
   <section>
    <h2 id="@(level.Value)">@Html.Raw(level.Value)</h2>

        @foreach (var chara in Definitions.CharacterNames)
        {
    <table class="score_per_level">
     <caption>@Html.Raw(chara.Value.LongName)</caption>
     <thead>
      <tr>
       <th class="number">No.</th>
       <th class="name">Name</th>
       <th class="score">Score</th>
       <th class="date">Date</th>
      </tr>
     </thead>
     <tbody>
            @foreach (var rank in Enumerable.Range(1, 10))
            {
                var rankStr = rank.ToString("D2");
                var rankKey = rank % 10;
      <tr>
       <td class="number">No.@(rankStr)</td>
       <td class="name">%T75SCR@(level.Key)@(chara.Key)@(rankKey)1</td>
       <td class="score">%T75SCR@(level.Key)@(chara.Key)@(rankKey)2</td>
       <td class="date">%T75SCR@(level.Key)@(chara.Key)@(rankKey)3</td>
      </tr>
            }
     </tbody>
    </table>
@:
        }
   </section>
        @if (level.Key != Definitions.LevelNames.Last().Key)
        {
@:
   <hr />
@:
        }
    }
