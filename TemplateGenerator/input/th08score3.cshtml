@using TemplateGenerator.Models.Th08
@{
    ViewData["Title"] = $"{Definitions.Title} スコアデータ";
}
@section Styles {
<style>
/* <![CDATA[ */
    td.score { min-width: 70px; }
    td.stage { min-width: 100px; }
    table.practice { float: left; }
    table.practice td.count { min-width: 70px; }
/* ]]> */
</style>
}
@section Navigation {
    <ul>
     <li><a href="th08score1.html">スコアデータ全般</a></li>
     <li><a href="th08score2.html">キャラ別スコア</a></li>
     <li>プラクティス</li>
     <li><a href="th08card1.html">御札戦歴（ゲーム本編）</a></li>
     <li><a href="th08card2.html">御札戦歴（スペルプラクティス）</a></li>
    </ul>
    <ul>
    @foreach (var level in Definitions.LevelPracticeNames)
    {
     <li><a href="#@(level.Value)">@Html.Raw(level.Value)</a></li>
    }
    </ul>
}

    @foreach (var level in Definitions.LevelPracticeNames)
    {
   <section>
    <h2 id="@(level.Value)">@Html.Raw(level.Value)</h2>

        @foreach (var chara in Definitions.CharacterNames)
        {
    <table class="practice">
     <caption>@Html.Raw(chara.Value.LongName)</caption>
     <thead>
      <tr>
       <th class="stage">Stage</th>
       <th class="score">Score</th>
       <th class="count">プレイ回数</th>
      </tr>
     </thead>
     <tbody>
            @foreach (var stage in Definitions.StagePracticeNames)
            {
      <tr>
       <td class="stage">@Html.Raw(stage.Value)</td>
       <td class="score">%T08PRAC@(level.Key)@(chara.Key)@(stage.Key)1</td>
       <td class="count">%T08PRAC@(level.Key)@(chara.Key)@(stage.Key)2</td>
      </tr>
            }
     </tbody>
    </table>
@:
        }
   </section>
        @if (level.Key != Definitions.LevelPracticeNames.Last().Key)
        {
@:
   <hr />
@:
        }
    }
